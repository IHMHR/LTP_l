algoritmo "ListaLTP"
// Função : calcule de circuferencia
// Autor : IHMHR
// Data : 10/02/2015
// Seção de Declarações
var
   raio,perimetro:real
inicio
// Seção de Comandos
   escreval("Digite o valor do raio da circuferência:")
   leia(raio)

   perimetro <- 2 * 3.14 * raio

   escreval("O valor do perimêtro da circuferência é: ", perimetro)
fimalgoritmo
